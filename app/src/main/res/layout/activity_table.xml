<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityTable">

    <TextView
        android:id="@+id/tv_faltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Resumen de Faltas" />

    <TableLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        >
        <TableRow>

            <TextView
                android:id="@+id/tv_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes" />

            <TextView
                android:id="@+id/tv_nfaltas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÂºFaltas" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/tv_mes_septiembre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Septiembre" />

            <TextView
                android:id="@+id/tv_nfaltas_septiembre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="3" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/tv_mes_octubre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Octubre" />

            <TextView
                android:id="@+id/tv_nfaltas_octubre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"

                android:text="4" />
        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/tv_mes_noviembre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noviembre" />

            <TextView
                android:id="@+id/tv_nfaltas_noviembre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"

                android:text="0" />
        </TableRow>
            <View
                android:layout_height="2dip"
                android:layout_width="wrap_content"
                android:background="#FF909090" />
        <TableRow>
            <TextView
                android:id="@+id/tv_faltas_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total" />
            <TextView
                android:id="@+id/tv_nfaltas_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_faltas_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Volver" />
</LinearLayout>